@using ShopTARgv24.Models.Kindergarten
@model ShopTARgv24.Models.Kindergarten.KindergartenCreateUpdateViewModel


@if (Model.KindergartenId.HasValue)
{
    <h1>Update</h1>
}
else
{
    <h1>Create</h1>
}

<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="KindergartenId" type="hidden"/>
        <input asp-for="CreatedAt" type="hidden"/>
        <input asp-for="ModifiedAt" type="hidden"/>

        <div class="form-group row">
            <label asp-for="GroupName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="GroupName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="ChildrenCount" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ChildrenCount" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="KindergartenName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="KindergartenName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="TeacherName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="TeacherName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Images" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <div class="custom-file">
                    <input class="form-control" asp-for="Files" multiple type="file" />
                </div>
            </div>
        </div>
        
        <div>
            @foreach (var images in Model.Images)
            {
                <partial name="_Images" model="images" />
                <div class="d-flex align-items-center mb-3">
                    <partial name="_Images" model="images" />
                    <input asp-action="removeImage" asp-controller="Kindergarten" asp-route-imageId="@images.Id"
                           type="submit" class="btn btn-danger ms-3" value="Delete" />
                </div>
            }
        </div>
        <div>
            @foreach (var images in Model.Images)
            {
                <partial name="_Images" model="images"/>
            }
        </div>
        
        @if (Model.KindergartenId.HasValue)
        {
            <input asp-action="update" asp-controller="Kindergarten" type="submit" class="btn btn-primary" value="Update" />
        }
        else
        {
            <input asp-action="create" asp-controller="Kindergarten" type="submit" class="btn btn-primary" value="Create" />
        }
        <a asp-action="Index" asp-controller="Kindergarten" class="btn btn-success">Back</a>

    </form>
</div>