@using ShopTARgv24.Core.Domain
@model IEnumerable<ShopTARgv24.Models.Kindergarten.KindergartenIndexView>

    @{
        int rowNumber = 1;
    }

<div>
    <a asp-action="create" asp-controller="Kindergarten" type="submit" class="btn btn-primary">Create</a>
</div>

<div class="h1">
    Kindergarten
</div>
<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">GroupName</th>
                <th scope="col">ChildrenCount</th>
                <th scope="col">KindergartenName</th>
                <th scope="col">TeacherName</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var kindergarten in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@kindergarten.GroupName</td>
                    <td>@kindergarten.ChildrenCount</td>
                    <td>@kindergarten.KindergartenName</td>
                    <td>@kindergarten.TeacherName</td>
                    <td>
                        <a asp-action="details" asp-controller="Kindergarten" asp-route-id="@kindergarten.KindergartenId" class="btn btn-primary">Details</a>
                        <a asp-action="update" asp-controller="Kindergarten" asp-route-id="@kindergarten.KindergartenId" class="btn btn-primary">Update</a>
                        <a asp-action="delete" asp-controller="Kindergarten" asp-route-id="@kindergarten.KindergartenId" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
                rowNumber += 1;
            }
        </tbody>
    </table>
</form>